DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/press
PORT=8000

# Security settings
HTML_UPLOAD_MAX_SIZE=52428800  # 50MB
MAX_EXTERNAL_LINKS=10          # Spam prevention

# Monitoring (optional)
SENTRY_DSN=https://your-sentry-dsn@o123456.ingest.sentry.io/project-id
ENVIRONMENT=development  # development, production, staging

# Email Configuration (Resend - shared with Aris Studio)
RESEND_API_KEY=your_resend_api_key_here
FROM_EMAIL=noreply@updates.aris.pub

# Base URL Configuration
# Used for: email links, Google Scholar meta tags, canonical URLs
BASE_URL=http://localhost:8000  # Local development
# BASE_URL=https://scroll.press  # Production

# Zenodo DOI Integration
ZENODO_API_TOKEN=your_zenodo_personal_access_token_here
ZENODO_BASE_URL=https://zenodo.org  # Use https://sandbox.zenodo.org for testing